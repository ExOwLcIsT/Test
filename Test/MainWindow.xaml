<Window x:Class="Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="845">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Вхідні дані для вершини і довжин дуг -->
        <StackPanel Grid.Column="0" Orientation="Vertical" Margin="10">
            <TextBox x:Name="InputTextBox" Width="280" Height="300" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
            <Button x:Name="DrawGraphButton" Content="Draw Graph" Width="100" Click="DrawGraphButton_Click" />

            <!-- Нове поле для введення кінцевої вершини -->
            <TextBlock Text="Find Shortest Path to Vertex:" Margin="0,20,0,0"/>
            <TextBox x:Name="EndVertexTextBox" Width="280" />
            <Button x:Name="FindPathButton" Content="Find Shortest Path" Width="150" Click="FindPathButton_Click" />
        </StackPanel>

        <!-- Канва для графіка -->
        <Canvas x:Name="GraphCanvas" Grid.Column="1" VerticalAlignment="Stretch" Background="LightGray"/>
    </Grid>
</Window>
