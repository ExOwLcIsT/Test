<Window x:Class="Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test"
        mc:Ignorable="d"
        Title="MainWindow" Height="486" Width="872">
    <Grid>
        <Canvas Name="GraphCanvas" Background="White" />
        <Grid Name="ShortestPathGrid" Margin="10" HorizontalAlignment="Right" VerticalAlignment="Top" Width="200">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Shortest Path" FontWeight="Bold" FontSize="14"/>
            <TextBlock Name="PathDetailsTextBlock" Grid.Row="1"/>
        </Grid>
        <Button Content="Draw Graph" Click="DrawGraphButton_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,15,0,0" />
        <Button Content="Find Path" Click="FindPathButton_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,368,0,0" RenderTransformOrigin="0.918,1.068"/>
        <TextBox  Name="InputTextBox" Width="100"  Height="277" AcceptsReturn="True" VerticalAlignment="Top" Margin="10,40,735,0" VerticalScrollBarVisibility="Visible"/>
        <TextBox Name="EndVertexTextBox" Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,399,0,0"/>
        <StackPanel Margin="627,40,18,262">
            <TextBlock x:Name="PathLengthTextBlock" FontSize="14" Foreground="Black" />
            <TextBlock x:Name="TotalLengthTextBlock" FontSize="14" Foreground="Black" />
        </StackPanel>
    </Grid>

</Window>
